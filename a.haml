$button-width: 225px;
$button-height: 100px;
$content-height: 450px;
$content-width: 400px;

$bgcolor: #18BAFF;


@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,300);

@-webkit-keyframes rotating /* Safari and Chrome */ {
    from {
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  to {
    -ms-transform: rotate(360deg);
    -moz-transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

body {
  display: flex;
  background-color: #f5f5f5;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-family: 'Open Sans', sans-serif;
}

.btn {
  transition: ease 0.4s all;
  display: block;
  position: absolute;    
  background-color: $bgcolor;
  opacity: 1;
  right: 0;
  left: 0;
  top: 50%;
  bottom: 0;
  transform: translateY(-50%);
  cursor: pointer;
  text-align: center;
  
  &.buttonsize {
    -webkit-transition-delay: 0.2s;/* Safari */
    transition-delay: 0.2s;
    width: $button-width;
    height: $button-height;
      &:hover {
        background-color: lighten(#18BAFF, 10%);
      }
  }
  
  &.contentsize {
    width: $content-width;
    height: $content-height;
    cursor: initial;
  }
}
  .center {
    margin: 0 auto;
  }

.button {
  transition: ease 0.3s all;
  position: absolute;
  display: inline-block;
  left: 0;
  right: 0;
  color: white;
  font-size: 24px;
  line-height: $button-height;
  
  .loading {
    transition: 0.3s ease all;
    visibility: hidden;
    opacity: 0;
    font-size: 0;
    
    &.visible {
      transition: 0.3s ease all;
      animation: rotating 2s ease infinite;
      visibility: visible;
      opacity: 1;
      font-size: 35px;
    }
  }
  
  .text {
    transition: ease 0.3s all;
    text-decoration: none;
    opacity: 1;
    visibility: visible;
    
    &.header {
      font-size: 40px;
    }
    
    &.invisible {
      transition: 0.3s ease all;
      opacity: 0;
      font-size: 0px;
      visibility: hidden;
    }
  }
}

.content {
  transition: ease 0.3s all;
  position: absolute;
  display: block;
  opacity: 0;
  text-decoration: none;
  color: white;
  font-size: 24px;
  
  height: 100%;
  width: 100%;
  
  left: 0;
  right: 0;
  top: 50%;
  bottom: 0;

  transform: translateY(-50%);
  pointer-events: none;
  
  &.visible {
    pointer-events: auto;
    transition-delay: 0.2s;
    opacity: 1;
  }
  
  .childbtn {
    transition: 0.3s ease all;
    position: absolute;
    bottom: 75px;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-right: 15px;
    padding-left: 15px;

    color: #484848 ;
    background-color: white;
    border-radius: 2px;
    
    cursor: pointer;
    &.cancel {
      box-shadow: 0 3px 17px 0 rgba(0, 0, 0, 0.2), 0 2px 20px 0             rgba(0, 0, 0, 0.19);
      left: 50px;
      &:hover {
        color: white;
        background-color: #FF5722;      
        box-shadow: 0 4px 17px 0 rgba(0, 0, 0, 0.2), 0 4px 17px 0             rgba(0, 0, 0, 0.19);;
        transform: translateY(-2px);
      }
    }
    
    &.submit {
      right: 50px;
      background-color: #DFDFDF;
      color: #9F9F9F;
      cursor: default;
      &:hover {
        box-shadow: none;
        transform: none;
      }
      &.active {
        box-shadow: 0 3px 17px 0 rgba(0, 0, 0, 0.2), 0 2px 20px 0 rgba(0, 0, 0, 0.19);
        background-color: white;
        color: black;
              cursor: pointer;
        &:hover {
          color: white;
          background-color: lighten($bgcolor, 10%);
          box-shadow: 0 4px 17px 0 rgba(0, 0, 0, 0.2), 0 4px 17px 0             rgba(0, 0, 0, 0.19);;
          transform: translateY(-2px);
        }
      }
    }
    
    &:active {
      box-shadow: 0 2px 17px 0 rgba(0, 0, 0, 0.2), 0 2px 17px 0             rgba(0, 0, 0, 0.19);;
      transform: translateY(2px);
    }
  }
  
  .input {
    position: relative;
    display: inline-block;
    max-width: 350px;
    vertical-align: top;
    margin: 0 auto;
    margin-top: 130px;
    color: lighten($bgcolor, 30%);
    
    input {
    transition: 0.3s ease all;
    font-size: 20px;
    padding-top: 14px;
    padding-bottom: 14px;
    padding-left: 15px;
    width: 250px;
    border: none;
    border-radius: 2px;
    background: linear-gradient(to bottom, rgba(255,255,255,0.5) 96%,       darken($bgcolor,15%) 4%);
    &::-webkit-input-placeholder {
              transition: 0.3s ease all;
      color: darken($bgcolor,5%);
      font-size: 18px;
    }
      
    &:focus, &:valid {
      outline: none;
      background-color: white;
      
      &::-webkit-input-placeholder {
        transition: 0.3s ease all;
        color: white;
        font-size: 16px;
        transform: translateY(-37px);
        visibility: visible !important;
      }
    }
  }
    .password {
      margin-top: 35px;
    }
  }
}